<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.twomin.timerclient.TimerType.SecondTimer"/>
        <variable
            name="timer"
            type="com.twomin.timerclient.Timer" />
        <variable
            name="task"
            type="String" />
    </data>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/background_timer">

            <TextView
                android:id="@+id/task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextTitle"
                android:text="@{task}"
                android:textColor="@color/colorWhite"
                android:layout_marginEnd="25dp"
                android:layout_gravity="end|center_vertical" />

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/background_second_timer">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/view_start_guide"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="21dp"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/title_top_guide"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="32dp"/>

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_timer"
                app:layout_constraintTop_toTopOf="@id/title"
                app:layout_constraintBottom_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="@id/view_start_guide" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextTitle"
                android:text="@{timer.title}"
                android:layout_marginStart="8dp"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/time"
                app:layout_constraintStart_toEndOf="@id/icon"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextSubInfo"
                android:text="@{@string/second_timer_format(((SecondTimer)timer.type).second)}"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>